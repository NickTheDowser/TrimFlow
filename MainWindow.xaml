<Window x:Class="TrimFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrimFlow"
        mc:Ignorable="d"
        Title="TrimFlow - Trim Silences from Videos" 
        Height="686" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Dynamic theme colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F9F9F9"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#333333"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
        <SolidColorBrush x:Key="InputBackgroundBrush" Color="#F5F5F5"/>
        
        <!-- Button styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dark mode toggle style -->
        <Style x:Key="DarkModeToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="12"
                                    Width="50"
                                    Height="24">
                                <Canvas>
                                    <Ellipse x:Name="Thumb"
                                            Width="18"
                                            Height="18"
                                            Fill="White"
                                            Canvas.Left="3"
                                            Canvas.Top="3">
                                        <Ellipse.RenderTransform>
                                            <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Canvas>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="26"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="0"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎬 TrimFlow" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="Automatically remove silences from your videos" 
                              FontSize="12" 
                              Foreground="#CCCCCC" 
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Dark Mode Switch -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <TextBlock Text="🌙" 
                              FontSize="18" 
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"/>
                    <ToggleButton x:Name="DarkModeToggle" 
                                 Style="{StaticResource DarkModeToggle}"
                                 VerticalAlignment="Center"
                                 ToolTip="Enable/Disable dark mode"/>
                    <TextBlock Text="☀️" 
                              FontSize="18" 
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                
                <!-- Section: Input File -->
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderBrush}">
                    <StackPanel>
                        <TextBlock Text="📁 Video File" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="InputFileTextBox" 
                                    Grid.Column="0"
                                    Height="36"
                                    Padding="10"
                                    VerticalContentAlignment="Center"
                                    IsReadOnly="True"
                                    Background="{DynamicResource InputBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="No file selected"/>
                            
                            <Button x:Name="BrowseButton" 
                                   Grid.Column="1"
                                   Content="📂 Browse..." 
                                   Style="{StaticResource SecondaryButton}"
                                   Margin="10,0,0,0"
                                   Width="130"/>
                        </Grid>

                        <!-- Batch Processing -->
                        <CheckBox x:Name="BatchModeCheckBox" 
                                 Content="Batch processing (multiple files)" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,10,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Section: Detection Settings -->
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderBrush}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Silence Detection Settings" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <!-- Silence Threshold -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                      Text="Silence threshold (dB):" 
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      VerticalAlignment="Center"
                                      Width="180"/>
                                                            
                            <Slider x:Name="SilenceThresholdSlider" 
                                   Grid.Column="1"
                                   Minimum="-60" 
                                   Maximum="-10" 
                                   Value="-30"
                                   TickFrequency="5"
                                   IsSnapToTickEnabled="True"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>
                            
                            <TextBlock x:Name="SilenceThresholdValue" 
                                      Grid.Column="2"
                                      Text="-30 dB" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Width="60"
                                      VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Minimum Silence Duration -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                      Text="Min. silence duration (sec):" 
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      VerticalAlignment="Center"
                                      Width="180"/>
                                                            
                            <Slider x:Name="SilenceDurationSlider" 
                                   Grid.Column="1"
                                   Minimum="0.1" 
                                   Maximum="5.0" 
                                   Value="0.5"
                                   TickFrequency="0.1"
                                   IsSnapToTickEnabled="True"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>
                            
                            <TextBlock x:Name="SilenceDurationValue" 
                                      Grid.Column="2"
                                      Text="0.5 s" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Width="60"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Section: Output -->
                <Border Background="{DynamicResource CardBackgroundBrush}" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderBrush}">
                    <StackPanel>
                        <TextBlock Text="💾 Output File" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="OutputFileTextBox" 
                                    Grid.Column="0"
                                    Height="36"
                                    Padding="10"
                                    VerticalContentAlignment="Center"
                                    IsReadOnly="True"
                                    Background="{DynamicResource InputBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Text="Generated automatically"/>
                            
                            <Button x:Name="OutputBrowseButton" 
                                   Grid.Column="1"
                                   Content="📁 Choose..." 
                                   Style="{StaticResource SecondaryButton}"
                                   Margin="10,0,0,0"
                                   Width="130"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Section: Progress -->
                <Border x:Name="ProgressPanel" 
                        Background="{DynamicResource CardBackgroundBrush}" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderBrush}"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="⏳ Progress" 
                                  FontSize="16" 
                                  FontWeight="SemiBold" 
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <ProgressBar x:Name="ProcessProgressBar" 
                                    Height="24" 
                                    Minimum="0" 
                                    Maximum="100" 
                                    Value="0"
                                    Margin="0,0,0,10"/>
                        
                        <TextBlock x:Name="ProgressStatusText" 
                                  Text="Waiting..." 
                                  HorizontalAlignment="Center"
                                  FontSize="12"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                        
                        <TextBox x:Name="LogTextBox"
                                Height="100"
                                Margin="0,10,0,0"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                IsReadOnly="True"
                                Background="{DynamicResource InputBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                FontFamily="Consolas"
                                FontSize="10"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer with action buttons -->
        <Border Grid.Row="2" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0"
                Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" 
                              Text="Ready" 
                              VerticalAlignment="Center"
                              FontSize="12"
                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="CancelButton" 
                           Content="❌ Cancel" 
                           Style="{StaticResource SecondaryButton}"
                           Width="120"
                           Margin="0,0,10,0"
                           IsEnabled="False"/>
                    
                    <Button x:Name="ProcessButton" 
                           Content="▶️ Process" 
                           Style="{StaticResource PrimaryButton}"
                           Width="150"
                           IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
